<div class="grid wide">

    <div class="courseCreate">
        <div class="courseCreate_wrap">

            <h3>{{course.0.name}}</h3>
            <form method="POST" action="/courseDetail/{{course.0._term}}/{{course.0.slug}}/store">
                <div class="courseCreate_form">
                    <label for="videoId">Liên kết video</label>
                    <input type="text" class="form-control" id="videoId" name="videoId">
                </div>
                 <div class="courseCreate_form">
                    <label for="lesson">Thứ tự bài giảng</label>
                    <input type="text" class="form-control" id="lesson" name="lesson" placeholder="VD: Buổi số 1">
                </div>
                 <div class="courseCreate_form">
                    <input type="hidden" type="text" class="form-control" value="{{course.0.name}}" id="name" name="name" >
                </div>
                <div class="courseCreate_form">
                    <input type="hidden" type="text" class="form-control" value="{{course.0._term}}" id="term" name="term" >
                </div>
                <div class="courseCreate_form">
                    <input type="hidden" type="text" class="form-control" value="{{course.0.slug}}" id="_slug" name="_slug" >
                </div>
                <button type="submit" class="courseCreate_form-btn">Đăng Khóa Học</button>
            </form>
        </div>
    </div>
</div>